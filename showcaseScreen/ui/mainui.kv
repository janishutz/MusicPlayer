LoginWindow:
    name: "Login"
    md_bg_color: app.theme_cls.accent_color
    GridLayout:
        cols: 1
        Label:
            text: "Welcome to the MusicPlayer Showcase Screen!"
            font_size: 27
            color: (0, 0, 0, 1)
        FloatLayout
            TextInput:
                text: ""
                hint_text: "Type Server IP here..."
                pos_hint: {'x': 0.25, 'y': 0.5}
                size_hint: 0.5, 0.2
                id: url
        GridLayout:
            Button:
                text: "connect"
                on_release: 
                    root.connect()
            Button:
                text: "Quit"
                on_release: 
                    app.stop()